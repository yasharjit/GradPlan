<html>
    <head>
        <style>
            section,h1 {
                padding: 0 1em;
            }

            .grid
            {
                display: grid;
                grid-template-columns: repeat(3,150px);  /* 3 columns */
                grid-template-rows: repeat(3,150px); /* 3 rows  */
                grid-gap:50px 30px; /* 50 pixels of space added between rows and 30 pixels added between columns  */
            }

            .grid-item{
                /* border:thin gray solid; */
                padding:10px;
            }
        </style>
    </head>
    <body>
        <article>
            <section>
              
              <div class="grid">
                <div class="grid-item"><img src="../public/images/teams.png" style="width: 290%; height: auto; margin: -23% 0% -15% 567%;"></div>
                <p style="margin: 0; padding: 0; font-size: 22px; font-weight: bold; color: #333333; text-align: center;">Efficient team formation feature</p>             
              </div>
            </section>
          </article>
    </body>
</html>