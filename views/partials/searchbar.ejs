<html>
    <head>
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
        />
        <style>
            .agileits_search {
                margin-top: 16px;
                float: left;
                width: 50%;
                border: -2px solid #191e21;
            }
            .agileits_search input[type="search"] {
                outline: none;
                border: -2px solid #191e21;
                background: #fff;
                border-right-color: transparent;
                color: #191e21;
                padding: 10px;
                font-size: 14px;
                float: left;
                width: 50%;
                letter-spacing: 1px;
                border-radius: 25px;
            }
            .agileits_search .btn-default {
                border: none;
                width: 50px;
                height: 41px;
                outline: none;
                box-shadow: none;
                background: #de0034;
                padding: 0px;
                border-radius: 25px;
                -webkit-appearance: none;
                -webkit-transition: 0.5s all;
                -moz-transition: 0.5s all;
                transition: 0.5s all;
                margin-top: 0px !important;
                margin-left: -50px !important;
            }
            .agileits_search .btn-default:hover {
                background: #de0034;
                opacity: 0.7;
            }
            .agileits_search span {
                color: #fff;
            }
            #agileinfo_search {
                padding: 9.5px 2px;
            }
            .agileits-navi_search {
                float: left;
                width: 40%;
            }
            #agileinfo-nav_search {
                outline: none;
                border: none;
                color: #000;
                font-size: 14px;
                background: #f3f3f3;
                padding: 15px 10px;
                width: 100%;
                letter-spacing: 1px;
            }
        </style>
    </head>
    <body>
        <div class="agileits_search" style="margin-left: 5%">
            <form action="/" method="GET" class="search">
                <input
                    name="search"
                    type="search"
                    id="search"
                    placeholder="Type here..."
                />
                <button
                    type="submit"
                    class="btn btn-default"
                    aria-label="Left Align"
                >
                    <span class="fa fa-search" aria-hidden="true"> </span>
                </button>
            </form>
        </div>
    </body>
</html>
