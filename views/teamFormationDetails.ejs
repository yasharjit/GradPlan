<html>
    <head>
        <title><%= title %></title>
    </head>
    <body>
        <%- include('partials/navbar.ejs') %>

        <div class="container">
            <form class="signupForm" id="signupForm" method="POST">
                <div class="container">
                    <center>
                        <h1>Form your team</h1>
                        <p>Please fill in this form to get your team members for the related event</p>
                    </center>
                    <hr />

                    <label for="name"><b>Event Name</b></label>
                    <input
                        type="text"
                        placeholder="Enter Event name"
                        id="email"
                        name="eName"
                    />

                    <label for="skills"><b>Skillset</b></label>
                    <input
                        type="text"
                        placeholder="Skills"
                        id="skill"
                        name="skill"
                    />

                    <div class="clearfix">
                        <button type="submit" class="signupbtn">Submit</button>
                    </div>
                </div>
            </form>
        </div>
        
        <%- include('partials/footer.ejs') %>
    </body>
</html>